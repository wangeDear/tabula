{
  "manifest_version": 3,
  "name": "Tabula",
  "version": "2.0.0",
  "description": "Tabula: 简洁高效的标签页管理器",
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "http://chromeapp.tabulapp.win/*"
  ],
  "action": {
    "default_title": "Tabula",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "open-manager": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "打开或切换到Tabula管理器"
    },
    "focus-search": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "在当前页面显示搜索覆盖层"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/manager.css",
        "locales/*.json",
        "icons/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}